{
  "name": "rexql-assets",
  "version": "1.0.0-beta",
  "description": "Asset build for rexQL Addon",
  "scripts": {
    "version:sync": "node scripts/sync-version.js",
    "prebuild": "npm run version:sync && npm run clean:assets",
    "build": "vite build && rsync -a assets/. ../../../public/assets/addons/rexql/",
    "build:css": "vite build --mode css",
    "build:js": "vite build --mode js",
    "watch": "vite build --watch",
    "dev": "concurrently \"vite build --watch\" \"npm run clean:assets\" \"npm run sync\"",
    "clean:assets": "rm -f ../../../public/assets/addons/rexql/*",
    "sync": "chokidar 'assets/**/*' -c 'rsync -a assets/. ../../../public/assets/addons/rexql/'",
    "preview": "vite preview",
    "clean": "rm -rf assets dist node_modules/.vite",
    "update-deps": "npm update"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/language": "^6.11.2",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "cm6-graphql": "^0.2.1",
    "codemirror": "^6.0.2",
    "graphql": "^16.11.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "js-yaml": "^4.1.0",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-style-order": "^0.2.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "stylelint": "^16.18.0",
    "stylelint-config-standard": "^36.0.1",
    "vite": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "private": true
}
